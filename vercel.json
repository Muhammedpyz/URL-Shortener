{
    "version": 2,
    "installCommand": "npm install",
    "buildCommand": "npm run build",
    "builds": [
        {
            "src": "server/src/app.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "server/prisma/schema.prisma"
                ]
            }
        },
        {
            "src": "client/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/src/app.ts"
        },
        {
            "src": "/(style.css|script.js|favicon.ico|assets/.*)",
            "dest": "/client/$1"
        },
        {
            "src": "/",
            "dest": "/client/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/server/src/app.ts"
        }
    ]
}